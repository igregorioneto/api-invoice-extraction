generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id                              String  @unique  @default(uuid())
  name                            String
  document                        String
  numberClient                    String
  addresses                       Address[]
  createdAt                       DateTime  @default(now())
  updatedAt                       DateTime  @updatedAt  
}

model Address {
  id                              String  @unique  @default(uuid())
  street                          String
  number                          String
  district                        String
  city                            String
  state                           String
  cep                             String
  clientId                        String
  client                          Client    @relation(fields: [clientId], references: [id])
  invoices                        Invoice[]
  createdAt                       DateTime  @default(now())
  updatedAt                       DateTime  @updatedAt
}

model Invoice {
  id                              String  @unique  @default(uuid())
  monthReference                  String
  eletricalEnergyQuantity         Int
  eletricalEnergyAmount           Int
  energySCEEEICMSQuantity         Int
  energySCEEEICMSAmount           Int
  compensatedEnergyQuantity       Int
  compensatedEnergyAmount         Int
  publicLightingContribution      Int
  addressId                       String
  address                         Address   @relation(fields: [addressId], references: [id])
  createdAt                       DateTime  @default(now())
  updatedAt                       DateTime  @updatedAt
}
